                     <div id="time"> </div>
                     <script>
                     function updateClock() {
                     var now = new Date(),
                         months = ['Januari', 'Februari', 'Maart', 'April', 'Mei', 'Juni', 'Juli', 'Augusus', 'September', 'October', 'November', 'December']
                         time = now.getHours() + ':' + ('00'+now.getMinutes()).slice(-2);
                         date = [now.getDate(),
                                 months[now.getMonth()],
                                 now.getFullYear()].join(' ');
                     document.getElementById('time').innerHTML = [date, time].join('   ');
                     setTimeout(updateClock, 1000);
                 }
                 updateClock();
                     </script>
